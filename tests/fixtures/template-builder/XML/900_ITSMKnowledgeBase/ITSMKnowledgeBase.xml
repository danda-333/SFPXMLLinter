		<Control xsi:type="SwitchControl" Ident="IsShowOnDashboard" Default="0" TitleResourceKey="ShowOnDashboard_ITSM" IsReadOnly="true">
			<DataBind>
				<Dependencies>
					<string>CategoryID</string>
					<string>SubCategoryID</string>
				</Dependencies>
				<Columns>
					<Column Ident="Value" DataBindType="Value" />
				</Columns>
				<SQL>
					SELECT
						CASE
							WHEN EXISTS(
								SELECT
									NULL
								FROM
									usr.Category wc
								WHERE
									wc.ID = @CategoryID
									AND wc.IsShowOnDashboard = @Active
									AND @SubCategoryID IS NULL
							)
							THEN 1
							WHEN EXISTS(
								SELECT
									NULL
								FROM
									usr.Category wc
								WHERE
									wc.ID = @SubCategoryID
									AND wc.IsShowOnDashboard = @Active
							)
							THEN 1
							ELSE 0
						END AS [Value]
				</SQL>
				<Parameters>
					<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="CategoryID" DataType="Number" />
					<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="SubCategoryID" DataType="Number" />
					<dsp:Parameter xsi:type="dsp:ValueParameter" Ident="Active" DataType="Number" Value="1" />
				</Parameters>
			</DataBind>
		</Control>
