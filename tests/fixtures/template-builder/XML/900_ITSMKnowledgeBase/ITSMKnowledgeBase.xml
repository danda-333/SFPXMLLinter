						<Column Ident="UpdateDate" TitleResourceKey="Content_ITSM" />
						<Column Ident="Tags" TitleResourceKey="Content_ITSM" />
					</Columns>
					<SQL>
						SELECT
							COALESCE(w.[TitleEN], '') AS TitleEN,
							COALESCE(w.[TitleCZ], '') AS TitleCZ,
							COALESCE(w.[ContentEN], '') AS ContentEN,
							COALESCE(w.[ContentCZ], '') AS ContentCZ,
							FORMAT(w.[CreateDate], 'dd. MM. yyyy') AS CreateDate,
							FORMAT(w.[LastUpdate], 'dd. MM. yyyy') AS UpdateDate,
							(
								SELECT
									STRING_AGG(CONCAT('<a style="color: #999 !important;" href="~/ContentView/Index/ITSMKnowledgeBaseDashboardView?filter=ITSMKnowledgeBaseTag:',ms.[Value],'">',ms.[Value],'</a>'), ', ') AS Tags
								FROM dbo.MultiSelect as ms
								WHERE ms.FormIdent = @FormIdent AND ms.ControlIdent = @ControlIdent AND ms.TableID = w.ID
							) as Tags
							,acc.[FullName] AS CreateAccount
						FROM usr.[ITSMKnowledgeBase] AS w
						LEFT JOIN dbo.[Account] AS acc ON acc.[ID] = w.[AccountID]
						WHERE
							w.[ID] = @ID
					</SQL>
					<Parameters>
						<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="ID" DataType="Number" />
						<dsp:Parameter xsi:type="dsp:ValueParameter" Ident="FormIdent" DataType="String" MaxLength="50" Value="ITSMKnowledgeBase" />
						<dsp:Parameter xsi:type="dsp:ValueParameter" Ident="ControlIdent" DataType="String" MaxLength="50" Value="ITSMKnowledgeBaseTag" />
					</Parameters>
				</DataSource>
			</Sources>
