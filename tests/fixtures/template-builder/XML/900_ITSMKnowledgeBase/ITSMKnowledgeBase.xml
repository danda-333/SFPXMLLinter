        <Control xsi:type="DataGridControl" Ident="ITSMKnowledgeBaseComments">
            <DataSource>
                <Columns>
                    <Column Ident="FullName" TitleResourceKey="FullName_ITSM" Width="10" />
                    <Column Ident="Content" TitleResourceKey="Content_ITSM" Width="10" />
                    <Column Ident="CommentDate" TitleResourceKey="CommentDate_ITSM" Width="10" />
                </Columns>
                <SQL>
                    SELECT acc.FullName, c.Content, c.CreateDate as CommentDate
                    FROM dbo.Communication c
                    JOIN dbo.Account acc on acc.ID = c.AccountID
                    WHERE c.FormIdent = 'ITSMKnowledgeBase'
                        AND c.ControlIdent = 'ITSMKnowledgeBaseCommunication'
                        AND c.TableID = @ID
                    ORDER BY c.CreateDate DESC
                </SQL>
                <Parameters>
                    <dsp:Parameter xsi:type="dsp:VariableParameter" Ident="ID" DataType="Number" />
                </Parameters>
            </DataSource>
        </Control>
