		<Control xsi:type="DropDownListControl" Ident="CategoryID" DataType="Number" IsShowRequired="true" TitleResourceKey="CategoryID_ITSM" IsReadOnly="true">
			<DataBind DefaultTitleResourceKey="SelectValue" DefaultValue="">
				<Columns>
					<Column Ident="ID" DataBindType="Value" />
					<Column Ident="Name" DataBindType="Title" />
				</Columns>
				<SQL>
					SELECT DISTINCT
							wc.[ID]
							, wc.[Name]
					FROM usr.[Category] AS wc
					LEFT JOIN usr.Category as wcp on wcp.ParentCategory = wc.ID
					JOIN dbo.AccountComputedPermissionComputed acp on (acp.TableID = wc.ID OR acp.TableID = wcp.ID) and FormIdent = 'Category' and PermissionID = 'TicketAuthor'
					WHERE wc.[State] != 0
						AND (wc.ParentCategory is null OR wc.ParentCategory = acp.TableID)
						AND acp.AccountID = @UserID
				</SQL>
				<Parameters>
					<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="UserID" DataType="Number" ConstantType="UserID" />
				</Parameters>
			</DataBind>
		</Control>
		<Control xsi:type="DropDownListControl" Ident="SubcategoryID" DataType="String" IsShowRequired="true" TitleResourceKey="SubcategoryID_ITSM" IsReadOnly="true">
			<DataBind DefaultTitleResourceKey="SelectValue">
				<Dependencies>
					<string>CategoryID</string>
				</Dependencies>
				<Columns>
					<Column Ident="ID" DataBindType="Value"></Column>
					<Column Ident="Name" DataBindType="Title"></Column>
				</Columns>
				<SQL>
					SELECT DISTINCT wc.ID, wc.Name
					FROM usr.Category wc
					LEFT JOIN usr.Category as wcp on wcp.ID = wc.ParentCategory
					JOIN dbo.AccountComputedPermissionComputed acp on (acp.TableID = wc.ID OR acp.TableID = wcp.ID)
						and acp.FormIdent = 'Category' and acp.PermissionID = 'TicketAuthor'
					WHERE wc.ParentCategory = @CategoryID
						AND wc.State != 0
						AND acp.AccountID = @UserID
				</SQL>
				<Parameters>
					<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="CategoryID" DataType="Number" />
					<dsp:Parameter xsi:type="dsp:VariableParameter" Ident="UserID" DataType="Number" ConstantType="UserID" />
