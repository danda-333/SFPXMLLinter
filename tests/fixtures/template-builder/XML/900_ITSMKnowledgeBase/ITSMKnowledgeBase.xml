							var LangTitle = languageObject.LanguageID == 1
								? (!string.IsNullOrEmpty(TitleCZ) ? TitleCZ : TitleEN)
								: (!string.IsNullOrEmpty(TitleEN) ? TitleEN : TitleCZ);

							var LangContent = languageObject.LanguageID == 1
